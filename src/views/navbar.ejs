<style>
  .custom-navbar * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: "Roboto", sans-serif;
  }

  .custom-navbar body {
    background-color: #f5f5f5;
  }

  .custom-navbar .navbar {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 60px;
    background-color: #333;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    z-index: 1000;
  }

  .custom-navbar .navbar-brand {
    color: #fff;
    font-size: 24px;
    font-weight: bold;
    text-decoration: none;
  }

  .custom-navbar .navbar-toggle {
    display: none;
    background-color: transparent;
    border: none;
    cursor: pointer;
  }

  .custom-navbar .navbar-toggle span {
    display: block;
    width: 25px;
    height: 3px;
    margin: 5px auto;
    background-color: #fff;
    transition: all 0.3s ease-in-out;
  }

  .custom-navbar .navbar-nav {
    display: flex;
    list-style: none;
  }

  .custom-navbar .nav-item {
    margin-left: 20px;
  }

  .custom-navbar .nav-link {
    color: #fff;
    text-decoration: none;
    font-size: 16px;
    padding: 10px;
    border-radius: 5px;
    transition: background-color 0.3s ease-in-out;
  }

  .custom-navbar .nav-link:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }

  @media (max-width: 768px) {
    .custom-navbar .navbar-nav {
      position: absolute;
      top: 60px;
      left: 0;
      width: 100%;
      background-color: #333;
      flex-direction: column;
      display: none;
    }

    .custom-navbar .navbar-nav.active {
      display: flex;
    }

    .custom-navbar .nav-item {
      margin: 0;
    }

    .custom-navbar .nav-link {
      display: block;
      padding: 15px 20px;
    }

    .custom-navbar .navbar-toggle {
      display: block;
    }

    .custom-navbar .navbar-toggle.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .custom-navbar .navbar-toggle.active span:nth-child(2) {
      opacity: 0;
    }

    .custom-navbar .navbar-toggle.active span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }
  }
</style>

<div class="custom-navbar">
  <nav class="navbar">
    <a href="#" class="navbar-brand" id="home">namozvaqti</a>
    <button class="navbar-toggle" id="navbarToggle">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <ul class="navbar-nav" id="navbarNav">
      <li class="nav-item"><a href="#" id="home" class="nav-link">Home</a></li>
      <li class="nav-item">
        <a href="#" id="add" class="nav-link">Add New</a>
      </li>
      <li class="nav-item">
        <a href="#" id="analytics" class="nav-link">Analytics</a>
      </li>
    </ul>
  </nav>
</div>

<script>
  const navbarToggle = document.getElementById("navbarToggle");
  const navbarNav = document.getElementById("navbarNav");

  const home = document.getElementById("home");
  const add = document.getElementById("add");
  const analytics = document.getElementById("analytics");

  const token = localStorage.getItem("token");
  if (!token) {
    window.location.href = "/login";
  }

  home.addEventListener("click", () => {
    window.location.href = "/?token=" + token;
  });

  add.addEventListener("click", () => {
    window.location.href = "/add?token=" + token;
  });

  analytics.addEventListener("click", () => {
    window.location.href = "/analytics?token=" + token;
  });

  navbarToggle.addEventListener("click", () => {
    navbarToggle.classList.toggle("active");
    navbarNav.classList.toggle("active");
  });
</script>
