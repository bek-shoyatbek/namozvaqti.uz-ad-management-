<!DOCTYPE html>
<html>
  <head>
    <title>Ad Analytics</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  </head>
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f5f5f5;
    }

    h1,
    h2 {
      color: #333;
      text-align: center;
    }

    .chart-container {
      position: relative;
      width: 100%;
      max-width: 1200px;
      height: 0;
      padding-bottom: 50%; /* Aspect ratio: 2:1 (height:width) */
      margin: 20px auto;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      background-color: #fff;
      border-radius: 5px;
    }

    .chart-container canvas {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      padding: 20px;
      box-sizing: border-box;
    }
  </style>
  <body>
    <%- include("navbar") %>
    <h1>Ad Analytics</h1>

    <h2>Overall Clicks and Views</h2>
    <div class="chart-container">
      <canvas id="dailyChart"></canvas>
    </div>

    <script>
      // Daily Chart
      const dailyClicksData = generateFakeClicks(30, 0, 1000); // Generate fake clicks data
      const dailyViewsData = generateFakeViews(30, 0, 1000); // Generate fake views data
      console.log("dailyClicksData ", dailyClicksData);
      console.log("dailyViewsData ", dailyViewsData);
      const dailyChart = new Chart(document.getElementById("dailyChart"), {
        type: "line",
        data: {
          labels: Array.from(
            { length: dailyClicksData.length },
            (_, i) => `Day ${i + 1}`
          ),
          datasets: [
            {
              label: "Clicks",
              data: dailyClicksData,
              backgroundColor: "rgba(255, 99, 132, 0.2)",
              borderColor: "rgba(255, 99, 132, 1)",
              borderWidth: 1,
            },
            {
              label: "Views",
              data: dailyViewsData,
              backgroundColor: "rgba(54, 162, 235, 0.2)",
              borderColor: "rgba(54, 162, 235, 1)",
              borderWidth: 1,
            },
          ],
        },
        options: {
          scales: {
            y: {
              beginAtZero: true,
            },
          },
        },
      });

      // Monthly and Yearly charts (similar to daily chart)

      // Helper function to generate fake clicks
      function generateFakeClicks(length, min, max) {
        return Array.from(
          { length },
          () => Math.floor(Math.random() * (max - min + 1)) + min
        );
      }

      // Helper function to generate fake views
      function generateFakeViews(length, min, max) {
        return Array.from(
          { length },
          () => Math.floor(Math.random() * (max - min + 1)) + min
        );
      }
    </script>
  </body>
</html>
